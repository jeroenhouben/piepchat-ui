<div class="card-content">
  {{#if title}}
    <span class="card-title">{{title}}</span>
  {{/if}}
  {{#if attrs.onsubmit}}
    <form {{action attrs.onsubmit on="submit"}}>
      {{yield}}
    </form>
  {{else}}
    {{yield}}
  {{/if}}
</div>
{{#if attrs.onsubmit}}
    <div class="card-action right-align">
      <button disabled={{buttonDisabled}} class="btn-flat {{if buttonDisabled "disabled" "green white-text"}}"
        onclick={{attrs.onsubmit}}>
        {{buttonText}}
      </button>
    </div>
{{/if}}
